<Window x:Class="BookStore.View.HomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookStore.View"
        mc:Ignorable="d"
        Title="HomeWindow" Height="550" Width="1300"
        WindowStartupLocation="CenterScreen"
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Button Height="40" Click="TrangChu_Click" Margin="0,10,0,0">Trang chủ</Button>
            <Button Height="40" Click="DonHang_Click" Margin="0,10,0,0">Quản lý đơn hàng</Button>
            <Button Height="40" Click="HangHoa_Click" Margin="0,10,0,0">Quản lý hàng hóa</Button>
            <Button Height="40" Click="ThongKe_Click" Margin="0,10,0,0">Báo cáo thống kê</Button>
            <Button Height="40" Click="DangXuat_Click" Margin="0,180,0,0">Đăng xuất</Button>
        </StackPanel>

        <Grid   x:Name="displayMain"
                            Grid.Column="1" >
            <ContentControl x:Name="contenDisplayMain"
                                        Width="auto"
                                        Height="auto" />
        </Grid>
    </Grid>
</Window>
